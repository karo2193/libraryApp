<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextMediumStyle">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonDefaultStyle" parent="TextMediumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:elevation">@dimen/elevation_big</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">@dimen/divider_height</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="TextToolbarDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="IconToolbarStyle">
        <item name="android:layout_width">@dimen/image_default_size</item>
        <item name="android:layout_height">@dimen/image_default_size</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="IconDefaultStyle">
        <item name="android:layout_height">@dimen/image_default_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="BookDetailsLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="BookDetailsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:paddingLeft">@dimen/margin_default</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>

    <style name="BookDetailsTitleTextStyle" parent="BookDetailsTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="BookDetailsNormalTextStyle" parent="BookDetailsTextStyle">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CategoryLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CategoryCheckBoxStyle">
        <item name="android:layout_width">@dimen/check_box_size</item>
        <item name="android:layout_height">@dimen/check_box_size</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="CategoryTextViewStyle" parent="TextMediumStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="DictionaryDialogTextStyle" parent="TextMediumStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_component_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
    </style>

    <style name="SearchEditTextHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SearchInputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/search_component_height</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="SearchEditTextStyle" parent="TextMediumStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/textColor</item>
    </style>

    <style name="SearchButtonStyle" parent="ButtonDefaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/search_component_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elevation">@dimen/elevation_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>
</resources>
