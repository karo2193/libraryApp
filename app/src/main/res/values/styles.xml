<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="TextToolbarDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/textLightColor</item>
    </style>

    <style name="IconDefaultStyle">
        <item name="android:layout_height">@dimen/image_default_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
    </style>

    <style name="BookDetailsLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="BookDetailsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="BookDetailsTitleTextStyle" parent="BookDetailsTextStyle">
        <item name="android:textColor">@color/textLightColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="BookDetailsNormalTextStyle" parent="BookDetailsTextStyle">
        <item name="android:textColor">@color/textLightColor</item>
    </style>
</resources>
