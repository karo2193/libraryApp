<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.library.proj.libraryapp.ui.search.SearchActivity">

    <include
        android:id="@+id/search_toolbar"
        layout="@layout/search_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_sv"/>

    <ScrollView
        android:id="@+id/search_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:layout_constraintBottom_toTopOf="@id/search_buttons_cl">

        <include
            layout="@layout/search_components_layout"/>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_buttons_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_sv"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/search_clear_btn"
            style="@style/ButtonDefaultStyle"
            android:text="@string/search_clear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/search_search_btn"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/search_search_btn"
            style="@style/ButtonDefaultStyle"
            android:text="@string/search_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/search_clear_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
