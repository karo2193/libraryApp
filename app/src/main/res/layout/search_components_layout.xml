<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/search_title_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_title"
        app:layout_constraintBottom_toTopOf="@id/search_author_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/search_author_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_author"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/search_inventory_number_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_title_et"/>

    <EditText
        android:id="@+id/search_inventory_number_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_inventory_number"
        app:layout_constraintBottom_toTopOf="@id/search_main_signature_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_author_et"/>

    <EditText
        android:id="@+id/search_main_signature_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_main_signature"
        app:layout_constraintBottom_toTopOf="@id/search_year_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_inventory_number_et"/>

    <EditText
        android:id="@+id/search_year_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_year"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/search_volume_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_main_signature_et"/>

    <EditText
        android:id="@+id/search_volume_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:hint="@string/search_volume"
        app:layout_constraintBottom_toTopOf="@id/search_type_spn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_year_et"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/search_type_spn"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:spinnerMode="dialog"
        android:prompt="@string/search_type"
        app:layout_constraintBottom_toTopOf="@id/search_category_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_volume_et"/>

    <Button
        android:id="@+id/search_category_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_component_height"
        android:text="@string/search_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_type_spn"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>