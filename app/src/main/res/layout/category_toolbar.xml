<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_toolbar"
    style="@style/ToolbarStyle"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/category_back_iv"
            android:layout_width="@dimen/image_default_size"
            android:layout_height="@dimen/image_default_size"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            style="@style/TextToolbarDefaultStyle"
            android:text="@string/categories_toolbar"
            app:layout_constraintLeft_toRightOf="@id/category_back_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/category_clear_iv"
            android:layout_width="@dimen/image_default_size"
            android:layout_height="@dimen/image_default_size"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="@dimen/margin_default"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>